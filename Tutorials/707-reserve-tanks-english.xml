			<value>1</value>
		</set>
	</init>

	<step>
		<message>
			The fuel level of the main tanks is low.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>

		<exit>
			<condition>
				<or>
					<less-than>
						<property>consumables/fuel/tank[1]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[2]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[4]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[5]/level-kg</property>
						<value>500.0</value>
					</less-than>
				</or>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Main tank 1.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>

		<marker>
			<x-m>-17.7521</x-m>
			<y-m>0.5736</y-m>
			<z-m>1.0139</z-m>
			<scale>2.343</scale>
		</marker>

		<exit>
			<condition>
				<or>
					<less-than>
						<property>consumables/fuel/tank[1]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[2]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[4]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[5]/level-kg</property>
						<value>500.0</value>
					</less-than>
				</or>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Main tank 2.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>

		<marker>
			<x-m>-17.6954</x-m>
			<y-m>0.5667</y-m>
			<z-m>1.0614</z-m>
			<scale>2.343</scale>
		</marker>

		<exit>
			<condition>
				<or>
					<less-than>
						<property>consumables/fuel/tank[1]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[2]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[4]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[5]/level-kg</property>
						<value>500.0</value>
					</less-than>
				</or>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Main tank 3.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>

		<marker>
			<x-m>-17.5896</x-m>
			<y-m>0.5687</y-m>
			<z-m>1.0606</z-m>
			<scale>2.343</scale>
		</marker>

		<exit>
			<condition>
				<or>
					<less-than>
						<property>consumables/fuel/tank[1]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[2]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[4]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[5]/level-kg</property>
						<value>500.0</value>
					</less-than>
				</or>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Main tank 4.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>

		<marker>
			<x-m>-17.5354</x-m>
			<y-m>0.5687</y-m>
			<z-m>1.0156</z-m>
			<scale>2.343</scale>
		</marker>

		<exit>
			<condition>
				<or>
					<less-than>
						<property>consumables/fuel/tank[1]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[2]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[4]/level-kg</property>
						<value>500.0</value>
					</less-than>
					<less-than>
						<property>consumables/fuel/tank[5]/level-kg</property>
						<value>500.0</value>
					</less-than>
				</or>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			The center tank and the reserve tanks contain fuel.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>
		<exit>
			<condition>
				<or>
					<greater-than>
						<property>consumables/fuel/tank[0]/level-kg</property>
						<value>10.0</value>
					</greater-than>
					<greater-than>
						<property>consumables/fuel/tank[3]/level-kg</property>
						<value>10.0</value>
					</greater-than>
					<greater-than>
						<property>consumables/fuel/tank[6]/level-kg</property>
						<value>10.0</value>
					</greater-than>
				</or>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Center tank.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>
		<marker>
			<x-m>-17.6421</x-m>
			<y-m>0.5687</y-m>
			<z-m>1.1072</z-m>
			<scale>2.343</scale>
		</marker>
		<exit>
			<condition>
				<or>
					<greater-than>
						<property>consumables/fuel/tank[0]/level-kg</property>
						<value>10.0</value>
					</greater-than>
					<greater-than>
						<property>consumables/fuel/tank[3]/level-kg</property>
						<value>10.0</value>
					</greater-than>
					<greater-than>
						<property>consumables/fuel/tank[6]/level-kg</property>
						<value>10.0</value>
					</greater-than>
				</or>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Reserve tank 1.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>
		<marker>
			<x-m>-17.7629</x-m>
			<y-m>0.5695</y-m>
			<z-m>0.9297</z-m>
			<scale>2.343</scale>
		</marker>
		<exit>
			<condition>
				<or>
					<greater-than>
						<property>consumables/fuel/tank[0]/level-kg</property>
						<value>10.0</value>
					</greater-than>
					<greater-than>
						<property>consumables/fuel/tank[3]/level-kg</property>
						<value>10.0</value>
					</greater-than>
					<greater-than>
						<property>consumables/fuel/tank[6]/level-kg</property>
						<value>10.0</value>
					</greater-than>
				</or>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Reserve tank 2.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>
		<marker>
			<x-m>-17.5338</x-m>
			<y-m>0.5695</y-m>
			<z-m>0.9297</z-m>
			<scale>2.343</scale>
		</marker>
		<exit>
			<condition>
				<or>
					<greater-than>
						<property>consumables/fuel/tank[0]/level-kg</property>
						<value>10.0</value>
					</greater-than>
					<greater-than>
						<property>consumables/fuel/tank[3]/level-kg</property>
						<value>10.0</value>
					</greater-than>
					<greater-than>
						<property>consumables/fuel/tank[6]/level-kg</property>
						<value>10.0</value>
					</greater-than>
				</or>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Open reserve valve 1 to refill main tank 1.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>
		<marker>
			<x-m>-17.7554</x-m>
			<y-m>0.5695</y-m>
			<z-m>0.9606</z-m>
			<scale>1.5597</scale>
		</marker>
		<condition>
			<and>
				<greater-than>
					<property>consumables/fuel/tank[6]/level-kg</property>
					<value>10.0</value>
				</greater-than>
				<less-than>
					<property>consumables/fuel/tank[5]/level-kg</property>
					<value>500.0</value>
				</less-than>
			</and>
		</condition>
		<exit>
			<condition>
				<greater-than>
					<property>/b707/fuel/valves/valve[0]</property>
					<value>0</value>
				</greater-than>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Wait while main tank 1 is refilled.
		</message>
		<interval>20</interval>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>
		<marker>
			<x-m>-17.7521</x-m>
			<y-m>0.5736</y-m>
			<z-m>1.0139</z-m>
			<scale>2.343</scale>
		</marker>
		<condition>
			<greater-than>
				<property>/b707/fuel/valves/valve[0]</property>
				<value>0</value>
			</greater-than>
		</condition>
		<exit>
			<condition>
				<less-than>
					<property>consumables/fuel/tank[6]/level-kg</property>
					<value>10.0</value>
				</less-than>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Close reserve valve 1.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>-0.17</x-offset-m>
			<y-offset-m>1.21</y-offset-m>
			<z-offset-m>-17.5</z-offset-m>
			<field-of-view>62.03</field-of-view>
		</view>
		<marker>
			<x-m>-17.7554</x-m>
			<y-m>0.5695</y-m>
			<z-m>0.9606</z-m>
			<scale>1.5597</scale>
		</marker>
		<condition>
			<greater-than>
				<property>/b707/fuel/valves/valve[0]</property>
				<value>0</value>
			</greater-than>
		</condition>
		<exit>
			<condition>
				<less-than>
					<property>/b707/fuel/valves/valve[0]</property>
					<value>1</value>
				</less-than>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Open reserve valve 2 to refill main tank 4.
		</message>
		<view>
			<view-number>9</view-number>
			<heading-offset-deg>286.06</heading-offset-deg>
			<pitch-offset-deg>-16.35</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
