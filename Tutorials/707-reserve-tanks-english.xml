<PropertyList>
	<name>Fuel: Reserve tanks and center tank [english]</name>
	<description>Refill main tanks from reserve tanks and center tank. The procedure can be run befor startup and during flight. Will set fuel level of the tanks on start.</description>
	<step-time>3</step-time>
	<init>
		<set>
			<property>/b707/battery-switch</property>
			<value>1</value>
		</set>
		<set>
			<property>controls/lighting/cabin-lights</property>
			<value>1</value>
		</set>
		<set>
			<property>controls/lighting/cabin-dim</property>
			<value>0.75</value>
		</set>
		<set>
			<property>consumables/fuel/tank[0]/level-kg</property>
			<value>300</value>
		</set>
		<set>
			<property>consumables/fuel/tank[1]/level-kg</property>
			<value>400</value>
		</set>
		<set>
			<property>consumables/fuel/tank[2]/level-kg</property>
			<value>500</value>
		</set>
		<set>
			<property>consumables/fuel/tank[3]/level-kg</property>
			<value>8000</value>
		</set>
		<set>
			<property>consumables/fuel/tank[4]/level-kg</property>
			<value>500</value>
		</set>
		<set>
			<property>consumables/fuel/tank[5]/level-kg</property>
			<value>400</value>
		</set>
		<set>
			<property>consumables/fuel/tank[6]/level-kg</property>
			<value>300</value>
		</set>
		<set>
			<property>b707/fuel/valves/valve[0]</property>
			<value>0</value>
		</set>
		<set>
			<property>b707/fuel/valves/valve[1]</property>
			<value>0</value>
		</set>
		<set>
			<property>b707/fuel/valves/valve[2]</property>
			<value>0</value>
		</set>
		<set>
			<property>b707/fuel/valves/valve[3]</property>
			<value>0</value>
		</set>
		<set>
			<property>b707/fuel/valves/valve[4]</property>
			<value>0</value>
		</set>
		<set>
			<property>b707/fuel/valves/valve[5]</property>
